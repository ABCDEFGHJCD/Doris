#!/bin/bash

# determine base directory; preserve where you're running from

BASE_BIN_DIR=`dirname $0`
. $BASE_BIN_DIR/env

cd $BASE_BIN_DIR/..
BASE=`pwd`

chmod +x $BASE/bin/ -R

JBOSS_FLAG=$OUTPUT_HOME/.jbossflag
if [ -f $JBOSS_FLAG ]; then
	$BASE/bin/jbossctl stop
else 
	$BASE/bin/jettyctl stop
fi
