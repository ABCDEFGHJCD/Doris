#!/bin/bash

BASE_BIN_DIR=`dirname $0`
. $BASE_BIN_DIR/env

# check if root run the script
if [ `id -u` = 0 ]
then
    echo "****************************************************"
    echo "*Error: root (the superuser) can't run this script.*"
    echo "****************************************************"    
    exit 1
fi

# determine base directory; preserve where you're running from
cd `dirname $0`/..
BASE=`pwd`

chmod +x $BASE/bin/ -R
JBOSS_FLAG=$OUTPUT_HOME/.jbossflag
echo '--' $JBOSS_FLAG
if [ -f $JBOSS_FLAG ]; then
	echo 'jboss'
	$BASE/bin/jbossctl start
else 
	echo 'jetty'
	$BASE/bin/jettyctl start
fi

